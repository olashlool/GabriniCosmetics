@model List<GabriniCosmetics.Areas.Admin.Models.ContactUs>

<!-- Container-fluid starts-->

@foreach (var item in Model)
{
    <div class="container-fluid">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div>
                    @item.Name
                </div>
                <div>
                    <a class="action-icon" href="#" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.Id">
                        <i class="fa-regular fa-trash"></i>
                    </a>
                </div>
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.Email</h5>
                <p class="card-text">@item.Enquiry</p>

            </div>
        </div>
    </div>
}


<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this feedback?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary" id="confirmDeleteButton">Yes</button>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        var feedbackId;

        // Ensure the modal event is properly set up
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            feedbackId = button.data('id'); // Get the feedback ID from the button's data attribute
        });

        // Confirm delete button click event
        $('#confirmDeleteButton').click(function () {
            $.ajax({
                type: 'POST',
                url: '/Admin/Feedback/Delete',
                contentType: 'application/json',
                data: JSON.stringify(feedbackId), // Pass the feedback ID in the request body
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function () {
                    console.log('Feedback deleted successfully'); // Debug log
                    location.reload();
                },
                error: function () {
                    console.log('Error deleting feedback'); // Debug log
                    alert('Error deleting feedback');
                }
            });
        });
    });
</script>
