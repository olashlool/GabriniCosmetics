@model GabriniCosmetics.Areas.Admin.Models.DTOs.ProductDTO

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div>
        <div class="row product-page-main p-0">
            <div class="col-xxl-4 col-md-6 box-col-6">
                <div class="card">
                    <div class="card-body">
                        <div class="product-slider owl-carousel owl-theme" id="sync1">
                            @foreach (var item in Model.Images)
                            {
                                <div class="item"><img src="~/uploads/@item.ImagePath" alt="" /></div>
                            }
                        </div>
                        <div class="owl-carousel owl-theme" id="sync2">
                            @foreach (var item in Model.Images)
                            {
                                <div class="item"><img src="~/uploads/@item.ImagePath" alt="" /></div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xxl-8 col-md-6 box-col-6 order-xxl-0 order-1">
                <div class="card">
                    <div class="card-body">
                        <div class="product-page-details">
                            <h3 class="f-w-600">@Model.Product.NameEn</h3>
                            <h3 class="f-w-600">@Model.Product.NameAr</h3>
                        </div>
                        <div class="product-price d-flex">
                            @if(Model.Flags.Any(x => x.FlagType == "Sale"))
                            {
                                <p>@Model.Product.PriceAfterDiscount JOD</p>
                                <del>@Model.Product.Price  JOD</del>

                            }else {
                                <p>@Model.Product.Price JOD</p>
                            }
                        </div>
                        <ul class="product-color">
                            @foreach (var item in Model.Colors)
                            {
                                <li>
                                    <div style="width:24px; height: 24px; background: @item.ColorName; border-radius: 50%;"></div>
                                </li>
                            }
                        </ul>
                        <hr />
                        <div>
                            <table class="product-page-width">
                                <tbody>
                                    <tr>
                                        <td><b>Category in english:</b></td>
                                        <td>@Model.Product.Subcategory.Category.NameEn</td>
                                    </tr>
                                    <tr>
                                        <td><b>Category in arabic:</b></td>
                                        <td>@Model.Product.Subcategory.Category.NameAr</td>
                                    </tr>
                                    <tr>
                                        <td><b>Sub-Category in english:</b></td>
                                        <td>@Model.Product.Subcategory.NameEn</td>
                                    </tr>
                                    <tr>
                                        <td><b>Sub-Category in arabic:</b></td>
                                        <td>@Model.Product.Subcategory.NameAr</td>
                                    </tr>
                                    <tr>
                                        <td><b>Availability:</b></td>
                                        <td class="txt-success">In stock</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <hr />
                        <div class="col-12 d-flex gap-2 justify-content-end">
                            <a class="btn btn-primary" href="/Admin/products/Edit/@Model.Product.Id">Edit</a>
                            <a class="btn btn-secondary" href="/Admin/products">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="row product-page-main">
            <div class="col-sm-12">
                <ul class="nav nav-tabs border-tab nav-primary mb-0" id="top-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="top-home-tab" data-bs-toggle="tab" href="#top-home" role="tab" aria-controls="top-home" aria-selected="false">Description in English</a>
                        <div class="material-border"></div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-top-tab" data-bs-toggle="tab" href="#top-profile" role="tab" aria-controls="top-profile" aria-selected="false">Description in Arabic</a>
                        <div class="material-border"></div>
                    </li>
                </ul>
                <div class="tab-content" id="top-tabContent">
                    <div class="tab-pane fade active show" id="top-home" role="tabpanel" aria-labelledby="top-home-tab">
                        <p class="mb-0 m-t-20">
                            @Model.Product.DescriptionEn
                        </p>
                    </div>
                    <div class="tab-pane fade" id="top-profile" role="tabpanel" aria-labelledby="profile-top-tab">
                        <p class="mb-0 m-t-20">
                            @Model.Product.DescriptionAr
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->
