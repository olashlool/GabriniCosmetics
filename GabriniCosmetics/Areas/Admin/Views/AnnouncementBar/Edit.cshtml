@model GabriniCosmetics.Areas.Admin.Models.AnnouncementBar
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4>Edit Subcategory</h4>
                </div>
                <div class="card-body">
                    <form href="Admin/AnnouncementBar/Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="AnnouncementEn" class="control-label"></label>
                            <input asp-for="AnnouncementEn" class="form-control" required />
                            <span asp-validation-for="AnnouncementEn" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AnnouncementAr" class="control-label"></label>
                            <input asp-for="AnnouncementAr" class="form-control" required />
                            <span asp-validation-for="AnnouncementAr" class="text-danger"></span>
                        </div>
                        <div class="form-group d-flex gap-2 justify-content-end">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="/Admin/AnnouncementBar" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>